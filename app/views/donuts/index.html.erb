

<h1><strong>All of our Donut's</strong></h1>
<div class="row">
<% @donuts.each do |donut| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail" style="filter: alpha(opacity=60); opacity: .9;">
      <img src="<%= donut.image %>" class="image-r">
      <div class="caption">
        <h3><%= donut.name %></h3>
        <h3>Cost: $<%= donut.cost %></h3>
        <%= link_to "More Info", donut, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <% end %>
</div>



<%= link_to 'New Donut', new_donut_path, class: "btn btn-primary" %>
